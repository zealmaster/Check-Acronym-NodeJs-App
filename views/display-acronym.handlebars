<div class="container">
  <div class="container shadow p-3 mb-5 rounded align-items-center">
    {{#if result.length}}
      {{#each result}}
        <p>{{this.acronym}} in {{this.subject_area}} - <a href="/profile"> {{this.firstname}}</a></p>
        <p>{{this.meaning}}</p>
        <p>{{this.definition}}</p>
      {{/each}}
      <div>
        <strong>Comments</strong>
        {{#if comments.length}}
          {{#with comments as |comment|}}
            {{#each comment}}
              <p>{{this.comment}} - <a href="#">{{this.firstname}}</a></p>
            {{/each}}
          {{/with}}
        {{/if}}

      </div>
      {{#if loggedin}}
        {{#each result}}
          <form action="/comment/{{this.id}}" method="post">
            <textarea name="comment" placeholder="Add comment"></textarea>
            <button type="submit">Comment</button>
          </form>
        {{/each}}
      {{/if}}

    {{else}}
      <p>No results found.</p>
    {{/if}}
  </div>

</div>